extends includes/base

block variables
  -
    var pageTitle = 'Каталог | Северяночка'
    var logoIsIndexLink = true


block userVar
  -
    var user = {
      login: true
    }

block activeNavVar
  -
    var active = {
      catalog: true,
      favourites: false,
      orders: false,
      basket: false
    }


block content
  main.main
    section.catalog-section
      .container.catalog-section__container
        .catalog-section__row
          .top-content
            .top-content__bread-crumbs.bread-crumbs
              .bread-crumbs__link-block.link-block
                a.link-block__link(href="./index.html") Главная
                .link-block__arrow
                  <svg class="bread-crumbs__link-arrow" width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.646447 0.646447C0.841709 0.451184 1.15829 0.451184 1.35355 0.646447L7.35355 6.64645C7.54882 6.84171 7.54882 7.15829 7.35355 7.35355L1.35355 13.3536C1.15829 13.5488 0.841709 13.5488 0.646447 13.3536C0.451184 13.1583 0.451184 12.8417 0.646447 12.6464L6.29289 7L0.646447 1.35355C0.451184 1.15829 0.451184 0.841709 0.646447 0.646447Z" fill="#414141"/>
                  </svg>
              .bread-crumbs__link-block.link-block
                a.link-block__link Каталог

            .top-content__title-block.top-title-block
              h2.catalog-section__title.top-title.soft Каталог

          .catalog-section__grid.catalog-grid
            .catalog-grid__row
              a.catalog-grid__category.category(href="./category.html")
