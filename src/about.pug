extends includes/base

block variables
  -
    var pageTitle = 'О нас | Северяночка'
    var logoIsIndexLink = true

block userVar
  -
    var user = {
      login: false
    }

block activeFooterNavVar
  -
    var activeFooter = {
      about: true,
      contacts: false,
      jobs: false,
      articles: false,
      personalData: false,
    }


block content
  main.main
    section.about
      .container.about__container
        .about__row
          .top-content
            ul.top-content__bread-crumbs.bread-crumbs
              li.bread-crumbs__link-block.link-block
                a.link-block__link(href="./index.html") Главная
                .link-block__arrow
                  <svg class="bread-crumbs__link-arrow" width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.646447 0.646447C0.841709 0.451184 1.15829 0.451184 1.35355 0.646447L7.35355 6.64645C7.54882 6.84171 7.54882 7.15829 7.35355 7.35355L1.35355 13.3536C1.15829 13.5488 0.841709 13.5488 0.646447 13.3536C0.451184 13.1583 0.451184 12.8417 0.646447 12.6464L6.29289 7L0.646447 1.35355C0.451184 1.15829 0.451184 0.841709 0.646447 0.646447Z" fill="#414141"/>
                  </svg>
              li.bread-crumbs__link-block.link-block
                a.link-block__link О компании

          .about__line
            .about__text-content
              h2.about__title О компании
              p.about__subtitle
                | Мы непрерывно развиваемся и
                br
                | работаем над совершенствованием сервиса, заботимся о наших клиентах,
                br
                | стремимся к лучшему будущему.

            .about__bg-image
              img.bg-image(src="./images/about.png" alt="" aria-hidden)
              img.about__partial.about__partial_1(src="./images/partical-green.svg" alt="" aria-hidden)
              img.about__partial.about__partial_2(src="./images/partical-orange.svg" alt="" aria-hidden)
              img.about__partial.about__partial_3(src="./images/partical-red.svg" alt="" aria-hidden)
              img.about__partial.about__partial_4(src="./images/partical-blue.svg" alt="" aria-hidden)
              img.about__partial.about__partial_5(src="./images/partical-green.svg" alt="" aria-hidden)
              img.about__partial.about__partial_6(src="./images/partical-blue.svg" alt="" aria-hidden)
              img.about__partial.about__partial_7(src="./images/partical-orange.svg" alt="" aria-hidden)
              img.about__partial.about__partial_8(src="./images/partical-blue.svg" alt="" aria-hidden)

    //- Список преимуществ
    section.advantages
      h2.hidden Преимущества

      .container.advantages__container
        .advantages__row
          ul.advantages__list.advantage-list
            li.advantage-list__block.advantage
              .advantage__icon
                img(src="./images/advantage-icon.png" alt="" aria-hidden)

              .advantage__content
                span.advantage__title Мы занимаемся розничной торговлей
                span.advantage__value Более 20 лет.

            li.advantage-list__block.advantage
              .advantage__icon
                img(src="./images/advantage-icon.png" alt="" aria-hidden)

              .advantage__content
                span.advantage__title Основная миссия компании
                span.advantage__value Максимальное качество товаров и услуг по доступной цене.

            li.advantage-list__block.advantage
              .advantage__icon
                img(src="./images/advantage-icon.png" alt="" aria-hidden)

              .advantage__content
                span.advantage__title Отличительная черта нашей сети
                span.advantage__value Здоровая и полезная продукция местного производства внаших магазинах.


    section.thanks
      h2.hidden Благодарность

      .container.thanks__container
        .thanks__row
          .thanks__line
            .thanks__icon
              img(src="./images/thanks-icon.png" alt="" aria-hidden)
            
            .thanks__text-block
              p.thanks__text Спасибо за то, что вы с нами. Северяночка, везет всегда!
